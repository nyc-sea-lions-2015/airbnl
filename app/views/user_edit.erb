<div class="container">

<% if session[:user_id] == @the_user.id %>

  <h1> Edit your profile </h1>

  <form action='/user/<%=@the_user.id%>' method='post'>
    <input type='hidden' name='_method' value='put'/>
    <input type='text' name='first_name' value='<%=@@the_user.first_name%>'/><br>
    <input type='text' name='last_name' value='<%=@@the_user.last_name%>'/><br>
    <input type='text' name='age' value='<%=@@the_user.age%>'/><br>
    <input type="text" name="email" value='<%=@@the_user.email%>'/><br>
    <input type="password" name="password" value='<%=@@the_user.password%>'/><br>
    <input type="password" name="password_confirmation" value='<%=@@the_user.password_confirmation%>'/><br>
    <input type="text" name="language" value='<%=@@the_user.language%>'/><br>
    <input type='text' name='description' value='<%=@@the_user.description%>'/><br>
    <input type="text" name="photo_url" value='<%=@@the_user.photo_url%>'/><br>
    <input type="text" name="facebook_url" value='<%=@@the_user.facebook_url%>'/><br>
    <input type='submit' value='Update'/>
  </form>

<% else %>

  <div class="sorry"> Sorry, you can only edit your own posts!
  <p><a href="/posts">Return to list of posts</a></p>
  </div>

<% end %>


</div>