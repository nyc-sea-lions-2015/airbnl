<form id ="signit" action='/signup' method='post'>
  <b>First name: </b>
  <br><input type='text' name='user[first_name]'/><br>
  <b>Last name: </b>
  <br><input type='text' name='user[last_name]'/><br>
  <b>Age: </b>
   <br><input type='text' name='user[age]'/><br>


