
<div class="container">


<div id="comments_section">
<h2>Comments</h2>

  <% @the_post.comments.each do |c| %>
  <p> <%= c.description %>
  <p><em>By: <%= c.user.first_name %>
  <br>Last updated: <%= c.updated_at %>
  </em></p>

<% if session[:user_id] == c.user_id %>
<p><a href="/posts/<%=@the_post.id%>/comments/<%=c.id%>/edit">Edit my comment</a></p>
<form action='/posts/<%=@the_post.id%>/comments/<%=c.id%>/delete' method='post'>
  <input type='hidden' name='_method' value='delete'/>
  <input type='submit' value='Deleste my comment'>
</form>
<% end %>
<% end %>
</div>

<p><a id="commentlink" href="/posts/<%=@the_post.id%>/comments/new">Add a comment</a></p>
