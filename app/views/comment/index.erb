
<div class="container">
<div class="header">
<% if session[:user_id] == nil %>
<a href="/login">Login </a>
| <a href="/signup">Sign up </a>
<% elsif session[:user_id] %>
| <a href="/logout">Logout </a>
<% end %>
</div>

<h2>Comments</h2>

  <% @the_post.comments.each do |c| %>
  <p> <%= c.description %>
  <p><em>By: <%= c.user.first_name %>
  <br>Last updated: <%= c.updated_at %>
  </em></p>


<p><a href="/posts/<%=@the_post.id%>/comments/<%=c.id%>/edit">Edit my comment</a></p>
<form action='/posts/<%=@the_post.id%>/comments/<%=c.id%>/delete' method='post'>
  <input type='hidden' name='_method' value='delete'/>
  <input type='submit' value='Delete my comment'>
</form>
<% end %>

<p><a href="/posts/<%=@the_post.id%>/comments/new">Add a comment</a></p>

<div class="footer"></div>
</div>