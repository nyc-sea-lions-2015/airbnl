


<% if session[:user_id] %>

<b> Add your comment </b>

<form id='commentform' data-url="<%= commentform_url %>" action='/posts/<%=@the_post.id%>/comments' method='post'>
  <input type='text' placeholder='description' name='description'/>
<input type='submit' value='Add!'/>
</form>

<% else %>
<div class="sorry"> Sorry, only members can add comments. Please sign up at the link below:
<p><a href="/signup">Sign up</a></p>
</div>

<% end %>

